@model Advertisement;
<h1 class="text-center">Add Advertisement</h1>

<form class="row g-3" method="post" asp-action="Create">
    <div class="col-md-6">
        <label class="form-label">Name</label>
        <input asp-for=Name type="text" class="form-control" placeholder="Enter name">
    </div>
    <div class="col-md-6">
        <label class="form-label">Brand</label>
        <input asp-for=Brand type="text" class="form-control" placeholder="Enter brand">
    </div>
    <div class="col-md-12">
        <label class="form-label">Price</label>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input asp-for=Price type="text" class="form-control" placeholder="Enter price">
            <span class="input-group-text">.00</span>
        </div>
    </div>
    <div class="col-md-12">
        <label class="form-label">Description</label>
        <input asp-for=Description type="text" class="form-control" placeholder="Enter description">
    </div>
    <div class="col-md-6">
        <label class="form-label">Category</label>
        <input asp-for=CategoryId type="text" class="form-control" placeholder="Enter category id">
    </div>
    <div class="col-md-6">
        <label class="form-label">Condition</label>
        <input asp-for=ConditionId type="text" class="form-control" placeholder="Enter condition id">
    </div>
    <div class="col-md-12">
        <label class="form-label">Image URL</label>
        <input asp-for=ImageUrl type="text" class="form-control" placeholder="Enter image url">
    </div>
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-success">Add</button>
    </div>
</form>